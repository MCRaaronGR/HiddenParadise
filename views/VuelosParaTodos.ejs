    <section class="PrimerPanel2">
        <h1>DESCUBRE LOS MEJORES VUELOS</h1>
    </section>

    <section class="SegundoPanel2">
        <div id="Tableroinfo">
            <div>
                <h1>Planifica tus vuelos con facilidad</h1>
                <div class="Grid-Informacion">
                    <div class="Msj">
                        <p id="MsjBienvenida">Encuentra vuelos al mejor precio y organiza tu itinerario sin complicaciones. Nuestro sistema te permite realizar conversiones de moneda y buscar vuelos que se ajusten a tus necesidades. ¡Empieza a planear tu próxima aventura hoy mismo!</p>
                    </div>
                    <div class="Imgs">
                        <div id="InfoPresupuesto">
                            <p>Vuelos ajustados a tu presupuesto</p>
                            <img src="/img/imgPresupuesto.jpg">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="FormularioAmadeus">
        <h1>Busca tu vuelo</h1>
        <form id="amadeusForm">
            <div id="PlacesV">
                <label for="origin">Origen</label>
                <select id="origin" name="origin" required>
                    <option value="">Selecciona país de origen</option>
                </select>
                <label for="destination">Destino</label>
                <select id="destination" name="destination" required>
                    <option value="">Selecciona destino</option>
                </select>
            </div>
            <div>
                <label for="departureDate">Fecha de salida</label>
                <input type="date" id="departureDate" name="departureDate" required>
            </div>
            <div>
                <label for="returnDate">Fecha de regreso</label>
                <input type="date" id="returnDate" name="returnDate">
            </div>
            <div>
                <label for="adults">Adultos</label>
                <input type="number" id="adults" name="adults" min="1" required>
            </div>
            <div>
                <label for="children">Niños</label>
                <input type="number" id="children" name="children" min="0">
            </div>
            <div>
                <label for="travelClass">Clase</label>
                <select id="travelClass" name="travelClass" required>
                    <option value="ECONOMY">Economy</option>
                    <option value="PREMIUM_ECONOMY">Premium Economy</option>
                    <option value="BUSINESS">Business</option>
                    <option value="FIRST">First Class</option>
                </select>
            </div>
            <button type="submit">Buscar Vuelo</button>
        </form>
    </section>

    <section class="ConversorMoneda">
        <h1>Conversor de Moneda</h1>
        <form id="currencyConverterForm">
            <div>
                <label for="amount">Cantidad</label>
                <input type="number" id="amount" name="amount" step="0.01" required>
            </div>
            <div>
                <label for="fromCurrency">De</label>
                <select id="fromCurrency" name="fromCurrency" required>
                    <option value="USD">USD</option>
                    <option value="MXN">MXN</option>
                    <option value="EUR">EUR</option>
                    <option value="GBP">GBP</option>
                </select>
            </div>
            <div>
                <label for="toCurrency">A</label>
                <select id="toCurrency" name="toCurrency" required>
                    <option value="USD">USD</option>
                    <option value="MXN">MXN</option>
                    <option value="EUR">EUR</option>
                    <option value="GBP">GBP</option>
                </select>
            </div>
            <button type="submit">Convertir</button>
        </form>
        <div id="conversionResult"></div>
    </section>

    <section id="resultsSection">
        <h2>Resultados de la búsqueda</h2>
        <table id="resultsTable">
            <thead>
                <tr>
                    <th>Origen</th>
                    <th>Destino</th>
                    <th>Fecha de salida</th>
                    <th>Fecha de regreso</th>
                    <th>Precio</th>
                    <th>Aerolínea</th>
                </tr>
            </thead>
            <tbody>
                <!-- Aquí se llenarán los resultados -->
            </tbody>
        </table>
    </section>

